<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="form-group col-md-4">
      <%= f.label :latitude, :class => 'sr-only', :for => 'car_latitude' %>
      <%= f.number_field :latitude, :class => 'form-control', :id => 'car_latitude', :placeholder => 'Latitude', :step => 'any', :max => 85, :min => -85 %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="form-group col-md-4">
      <%= f.label :longitude, :class => 'sr-only', :for => 'car_longitude' %>
      <%= f.number_field :longitude, :class => 'form-control', :id => 'car_longitude', :placeholder => 'Longitude', :step => 'any', :max => 180, :min => -180 %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
