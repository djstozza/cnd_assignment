<h2>Car <%= @car.vehicle_id %></h2>
<p id="notice"><%= notice %></p>

  <div id="map" class="mapShow"></div>

<table class="table table-striped table-bordered">
	<thead>
    	<tr>
      		<th>Car Name</th>
      		<th>Latitude</th>
      		<th>Longitude</th>
      		<th>Distance from <%= @current_user.username %></th>
    	</tr>
  	</thead>

	<tbody>
		<tr>
			<td>Car <%= @car.vehicle_id %></td>
        	<td><%= @car.latitude %></td>
        	<td><%= @car.longitude %></td>
			<td><%= distance([@current_user.latitude, @current_user.longitude],[@car.latitude, @car.longitude]).to_i %> km</td>
		</tr>
	</tbody>
</table>


<%= link_to 'Edit', edit_car_path(@car) %> |
<%= link_to 'Back', cars_path %>
