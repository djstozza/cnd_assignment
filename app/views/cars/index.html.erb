<p id="notice"><%= notice %></p>



<h2>Car Index</h2>


<div id="map" class="indexMap" style='max-width: 800px; height: 400px;'></div>


<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Car Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Distance from <%= @current_user.username %></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= link_to "Car #{car.id}", car %></td>
        <td><%= car.latitude %></td>
        <td><%= car.longitude %></td>
        <td><%= distance([@current_user.latitude, @current_user.longitude],[car.latitude,car.longitude]) %> km</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>

